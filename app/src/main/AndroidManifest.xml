<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="patrickengelkes.com.alleneune" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="patrickengelkes.com.alleneune.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.UserHomeActivity"
            android:label="@string/title_activity_user_home" >
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.PhoneNumberActivity"
            android:label="@string/title_activity_phone_number"
            android:parentActivityName="patrickengelkes.com.alleneune.activities.SignUpActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="patrickengelkes.com.alleneune.activities.SignUpActivity" />
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.CreateClubActivity"
            android:label="@string/title_activity_create_club" >
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.AddFriendsActivity"
            android:label="@string/title_activity_add_friends"
            android:parentActivityName="patrickengelkes.com.alleneune.activities.CreateClubActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="patrickengelkes.com.alleneune.activities.CreateClubActivity" />
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.ClubHomeActivity"
            android:label="@string/title_activity_club_home" >
        </activity>
        <activity
            android:name="patrickengelkes.com.alleneune.activities.EditFriendsActivity"
            android:label="@string/title_activity_edit_friends"
            android:parentActivityName="patrickengelkes.com.alleneune.activities.ClubHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="patrickengelkes.com.alleneune.activities.ClubHomeActivity" />
        </activity>
    </application>

</manifest>
